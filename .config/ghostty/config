#theme = catppuccin-mocha
theme = dracula+
mouse-hide-while-typing = true
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor

# New windows / tabs
keybind = cmd+t=new_tab
keybind = cmd+n=new_window

# split
keybind = cmd+right=goto_split:right
keybind = cmd+left=goto_split:left
keybind = cmd+up=goto_split:up
keybind = cmd+down=goto_split:down

# goto split window
keybind = cmd+opt+right=new_split:right
keybind = cmd+opt+left=new_split:left
keybind = cmd+opt+up=new_split:up
keybind = cmd+opt+down=new_split:down

keybind = cmd+opt+x=equalize_splits
